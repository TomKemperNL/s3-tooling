{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "useDefineForClassFields": false,
        "outDir": "dist",
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "skipLibCheck": true,
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ],
    "exclude": [
        "src/renderer/**/*",
        "test/renderer/*"
    ]
}