{
  "name": "s3-tooling",
  "version": "0.1.0",
  "main": "./dist/src/main.js",
  "scripts": {
    "dev": "concurrently \"vite build --watch\" \"tsc -p ./src/main/tsconfig.json --watch\" \"tsc -p ./src/renderer/tsconfig.json --watch\" \"dotenvx run -f .dev.env -- electron .\"",
    "build": "tsc -p ./src/main/tsconfig.json && tsc -p ./src/renderer/tsconfig.json && vite build",
    "test": "vitest",
    "start": "dotenvx run -f .dev.env -- electron .",
    "screenshots": "dotenvx run -f .dev.env -- electron ./dist/src/main-screenshots.js"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/node": "^22.17.0",
    "concurrently": "^9.2.0",
    "electron": "^37.2.4",
    "typescript": "^5.8.3",
    "vite": "^7.0.6",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.48.4",
    "@lit/context": "^1.1.6",
    "@octokit/rest": "^22.0.0",
    "chart.js": "^4.5.0",
    "lit": "^3.3.1",
    "sqlite3": "^5.1.7"
  }
}
